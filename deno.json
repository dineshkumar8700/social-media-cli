{
  "tasks": {
    "dev": "deno -A main.js",
    "dev:watch": "deno run --watch main.js --allow-all",
    "test" : "deno test --allow-all",
    "test:watch" : "deno test --watch --allow-all",
    "coverage" : "deno test --coverage",
    "coverage:detail" : "deno coverage --detail"
  },
  "imports": {
    "@inquirer/prompts": "npm:@inquirer/prompts@^8.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  }
}
